@{
    var currentDate = DateTime.Now.Date;
}
<div class="k-edit-form-container form-horizontal">




    <div class="form-group">
        @Html.LabelFor(m => m.ItemTypeID, new { @class = "col-md-4 control-label" })
        <div class="col-md-6 ">
            @(Html.Kendo().TextBoxFor(m=>m.ItemTypeName)
                    .HtmlAttributes(new {@readonly="True"}))
                
           
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ItemName, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @(Html.Kendo().TextBoxFor(m => m.ItemName)
                    .HtmlAttributes(new { @readonly = "True" }))
        </div>
    </div>
    <div class="form-group" id="A1">
   

        @Html.LabelRequiredHintFor(m => m.ActualTakeInQty, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @(Html.Kendo().NumericTextBoxFor(f => f.ActualTakeInQty)
                .Name("ActualTakeInQty")
                .Spinners(false)
                .Min(0)
                .Format("n0")
                .Decimals(0)
                .HtmlAttributes(new { @style = "width:100%" })
            )
        </div>
        <div class="col-md-offset-4 col-md-7">
        @Html.KendoValidationMessageFor(m => m.ActualTakeInQty)

        </div>
    </div>
    <div class="form-group" id="A2">
        @Html.LabelRequiredHintFor(m => m.ActualReturnQty, new { @class = "col-md-4 control-label" })
