            @(Html.Kendo().NumericTextBoxFor(f => f.ActualReturnQty)
                .Name("ActualReturnQty")
                .Spinners(false)
                .Min(0)
                .Format("n0")
                .Decimals(0)
                .HtmlAttributes(new { @style = "width:100%" })
            )
        </div>
        <div class="col-md-offset-4 col-md-7">

        @Html.KendoValidationMessageFor(m => m.ActualReturnQty)
        </div>
    </div>

    <div class="form-group" id="A3">
        @Html.LabelRequiredHintFor(m => m.ActualReturnDate, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @(Html.Kendo().DatePickerFor(f => f.ActualReturnDate)
                .Max(currentDate)
         
                .HtmlAttributes(new { @style = "width:100%" })
            )
        </div>
    </div>
