@model AccountViewModel

<h2><i class="fa fa-id-card-o"></i> @ViewResource.Account_Profile_Title</h2>
<div class="well well-sm well-shadow animated fadeIn">
    <div class="form-horizontal">
        <div class="`">
            @Html.LabelFor(m => m.Username, new { @class = "col-md-3 control-label", @style = "margin-left: -7px;" })
            <label class="col-md-9 control-text">@Html.DisplayFor(m=>m.Username)</label>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.Roles, new { @class = "col-md-3 control-label" })
            <label class="col-md-9 control-text">@String.Join(", ", Model.Roles)</label>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.EmployeeID, new { @class = "col-md-3 control-label" })
            <label class="col-md-3 control-text">@Html.DisplayFor(m=>m.EmployeeID)</label>
            @Html.LabelFor(m => m.FactoryCode, new { @class = "col-md-3 control-label" })
            <label class="col-md-3 control-text">@Html.DisplayFor(m => m.FactoryCode)</label>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.RegisteredDateTime, new { @class = "col-md-3 control-label" })
            <label class="col-md-3 control-text">@Html.DisplayDate(Model.RegisteredDateTime)</label>
            @Html.LabelFor(t => t.LastSignedInDateTime, new { @class = "col-md-3 control-label" })
            <label class="col-md-3 control-text">@Html.DisplayDate(Model.LastSignedInDateTime)</label>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3">
                <div class="button-container">
                    @Html.KendoActionLink("changePasswordLink", "lock", WidgetResource.ChangePassword_Button_Text, Url.Action("ChangePassword"), new { @class = "k-primary" })
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function (e) {
            app.initPage();
        });
    </script>
}